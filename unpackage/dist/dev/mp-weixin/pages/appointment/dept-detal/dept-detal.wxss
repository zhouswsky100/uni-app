.warp {
  font-size: 30rpx;
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.date-zhanwei {
  width: 100%;
  height: 107rpx;
}
.date-bg {
  position: fixed;
  z-index: 3;
  width: 100%;
  height: 107rpx;
}
.date-box {
  width: 100%;
  height: 107rpx;
}
.date-box .today {
    width: 107rpx;
    height: 107rpx;
    background: #157BC7;
    border-radius: 0 0 50% 50%;
    padding: 5rpx;
    border-bottom: 1rpx solid #ccc;
}
.date-box .today .today-text {
      width: 100%;
      height: 100%;
      background: #fff;
      color: #157BC7;
}
.date-box .after-day {
    width: 643rpx;
}
.after-scroll {
  width: 643rpx;
  white-space: nowrap;
}
.after-day-item {
  display: inline-block;
  width: 107rpx;
  height: 107rpx;
  background: #157BC7;
  border-radius: 0 0 50% 50%;
  padding: 5rpx;
  border-bottom: 1rpx solid #ccc;
}
.after-day-item.active {
    background: #c1ddf0;
}
.after-day-item view {
    margin-top: 17rpx;
    text-align: center;
    color: #fff;
    font-size: 26rpx;
}
.after-day-item view.scroll-day {
      font-size: 28rpx;
      font-weight: bold;
      margin-top: 10rpx;
}
.dept-list-box {
  margin-top: 30rpx;
  min-height: 500rpx;
}

