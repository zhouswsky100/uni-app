<view class="warp"><view class="sub-list-box"><view class="sub-list solid-bottom"><view class="sub-list-content text-lg"><text class="cuIcon-titles text-blue"></text><text class="text-grey">基础信息(必填)</text></view></view></view><block wx:for="{{userDetail}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="cu-form-group"><view class="title">{{item.title}}</view><block wx:if="{{item.region}}"><picker value="{{i}}" range="{{item.region}}" data-index="{{index}}" data-event-opts="{{[['change',[['PickerChange',['$event']]]]]}}" bindchange="__e"><view class="{{['picker',(item.value!='')?'selfss':'']}}">{{''+item.region[item.checkedIndex]+''}}</view></picker></block><block wx:else><view class="info-right">{{index=="sex"?item.code:item.value}}</view></block></view></block><view class="sub-list-box margin-top"><view class="sub-list flex-row space-between"><view class="sub-list-content text-lg"><text class="cuIcon-titles text-blue"></text><text class="text-grey">其他信息</text></view></view><block wx:for="{{otherInfo}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['cardClick',[index]]]]]}}" class="cu-form-group" bindtap="__e"><view class="title">{{item.title}}</view><block wx:if="{{index=='insuranceCard'}}"><input type="text" placeholder="{{item.placeholder}}" disabled="{{item.value!=''}}" value="{{item.value}}"/></block><block wx:else><view class="info-right">{{item.value==''?item.placeholder:item.value}}</view></block><block wx:if="{{index=='zhenka'}}"><text class="cuIcon-right text-grey"></text></block></view></block></view><view class="cu-form-group margin-tb-sm"><view>设置默认就诊人</view><switch class="color-base" color="#157BC7" checked="{{userMemberUuid==aumUuid}}" disabled="{{userMemberUuid==aumUuid}}" data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"></switch></view><view class="padding flex flex-direction bg-white"><button data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" class="cu-btn bg-base margin-tb-sm lg text-white" bindtap="__e">保 存</button></view></view>